<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/ui/fragment" xmlns:chart="http://jmix.io/schema/ui/charts">
    <layout>
        <vbox spacing="true" height="100%">
            <chart:pieChart id="pie3dChart"
                            angle="30"
                            depth3D="15"
                            outlineAlpha="0.4"
                            width="100%"
                            titleField="customer"
                            valueField="sum"
                            labelsEnabled="true"
                            height="100%">
                <chart:legend equalWidths="true"
                              position="RIGHT"
                              valueAlign="RIGHT"
                              valueWidth="100"/>
            </chart:pieChart>
            <button id="loadFrom1C" visible="false" caption="msg://loadFrom1C.caption" height="AUTO"/>
            <hbox spacing="true" height="AUTO">
                <dateField id="startDate" caption="msg://startDate.caption" datatype="date"/>
                <dateField id="endDate" caption="msg://endDate.caption" datatype="date"/>
            </hbox>
        </vbox>
    </layout>
</fragment>
